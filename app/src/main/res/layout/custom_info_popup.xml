<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/rl_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sadeemlight.util.RoundedImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_info_img"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_info_name"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:textColor="@color/dark_text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_info_img"
            android:layout_toEndOf="@+id/iv_info_img" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:id="@+id/imageView7"
        android:background="@color/light_text_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_info_detail"
        android:layout_marginTop="10dp"/>

</LinearLayout>