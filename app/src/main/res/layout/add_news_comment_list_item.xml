<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.sadeemlight.util.RoundedImageViewWithBorder
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_comment_list_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_login_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_comment_list_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_comment_list_icon"
        android:layout_toEndOf="@+id/iv_comment_list_icon"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:textColor="@color/dark_text_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_comment_list_name"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tv_comment_list_title"
        android:layout_alignLeft="@+id/tv_comment_list_title"
        android:layout_alignStart="@+id/tv_comment_list_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="on 26-8-2016"
        android:id="@+id/tv_comment_list_date"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/tv_comment_list_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>