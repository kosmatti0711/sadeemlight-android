<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="right">

    <TextView
        android:id="@+id/lbldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_msg_you"
        android:padding="3dp"
        android:layout_marginLeft="80dp">

        <TextView
            android:id="@+id/lblMsgFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_text">
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text_color"
                android:textSize="16dp"
                android:layout_gravity="left"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_time1"
                    android:gravity="right"
                    android:layout_marginLeft="15dp"
                    android:textSize="12dp"
                    android:textColor="#64aa55"
                    android:text="12:21 AM"/>
                <RelativeLayout
                    android:layout_width="23dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/waiting"
                        android:tint="#64aa55"
                        android:id="@+id/img_loaded_offline1"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/list_check"
                        android:tint="#64aa55"
                        android:id="@+id/img_loaded_normal1"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/list_halfcheck"
                        android:layout_marginLeft="5dp"
                        android:tint="#64aa55"
                        android:id="@+id/img_loaded_check1"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:id="@+id/layout_image">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/message_image"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/message_video_thumb"
                android:src="@drawable/ic_video_thumb_play"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@drawable/shape_roundrect_background1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_time2"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:textColor="#FFFFFF"
                    android:text="12:21 AM"/>
                <RelativeLayout
                    android:layout_width="23dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/waiting"
                        android:tint="#FFFFFF"
                        android:id="@+id/img_loaded_offline2"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/list_check"
                        android:tint="#FFFFFF"
                        android:id="@+id/img_loaded_normal2"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/list_halfcheck"
                        android:layout_marginLeft="5dp"
                        android:tint="#FFFFFF"
                        android:id="@+id/img_loaded_check2"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_you"
            android:id="@+id/layout_music"
            android:padding="10dp"
            android:gravity="center_vertical|left">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/message_audio_play"
                android:id="@+id/button_music_play"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:weightSum="1">
                <ak.sh.ay.musicwave.MusicWave
                    android:id="@+id/musicWave"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:colorGradient="false"
                    app:endColor="#662D8C"
                    app:startColor="#ED1E79"
                    app:waveColor="#EC625F"
                    app:waveThickness="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_music_desc"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_time3"
                        android:gravity="right"
                        android:layout_marginLeft="15dp"
                        android:textSize="12dp"
                        android:textColor="#64aa55"
                        android:text="12:21 AM"/>
                    <RelativeLayout
                        android:layout_width="23dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/waiting"
                            android:tint="#64aa55"
                            android:id="@+id/img_loaded_offline3"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/list_check"
                            android:tint="#64aa55"
                            android:id="@+id/img_loaded_normal3"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/list_halfcheck"
                            android:layout_marginLeft="5dp"
                            android:tint="#64aa55"
                            android:id="@+id/img_loaded_check3"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>