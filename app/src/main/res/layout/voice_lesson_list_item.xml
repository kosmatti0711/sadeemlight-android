<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_voice">

        <TextView
            android:id="@+id/tv_voice_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="This is lesson id 1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_text_color" />

        <RelativeLayout
            android:id="@+id/rl_voice_list_playpuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_voice_list_playpuse"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_voice_list_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/rl_voice_list_playpuse"
            android:layout_alignRight="@+id/rl_voice_list_playpuse"
            android:layout_alignTop="@+id/rl_voice_list_playpuse"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/iv_voice_list_sound"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_audio_volume" />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekBar_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl_voice_list_playpuse"
            android:max="100"
            android:padding="5dp"
            android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/apptheme_scrubber_control_selector_holo_light" />

    </RelativeLayout>
</RelativeLayout>